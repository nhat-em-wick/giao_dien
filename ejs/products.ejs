<div class="categories">
  <div class="small-container">
    <div class="row row-2">
      <h2>Tất cả sản phẩm</h2>
      <div class="form-search">
        <form action="/products/search" method="get">
          <input type="text" name="q" class="search" value="<%= messages.q %>">
          <input type="submit" class="btn-search" value="Tìm kiếm">
        </form>
      </div>
      <select>
        <option value="">Danh mục</option>
        <option value="">Sách văn hóa</option>
        <option value="">Sách kinh tế</option>
        <option value="">Sách kỹ năng</option>
        <option value="">Sách thiếu nhi</option>
      </select>
    </div>
    <div class="row">
      <% records.forEach(product=>{ %>
      <div class="col-4">
        <div class="new-box">
          <img src="<%= product.image %>">
          <div class="new-link">
            <a href="" class="button">XEM SẢN PHẨM</a>
          </div>
        </div>
        <p id="gia"><%= (product.price).toLocaleString('it-IT', {style : 'currency', currency : 'VND'}) %></p>
      </div>
      <% }) %>
    </div>
    <div class="page-btn">
      <% if(page>1){ %>
      <a href="?page=<%= page-1 %>">&laquo;</a>
      <% } %>
      <% for(var i = 1; i <= totalPages; i++){ %>
      <% if(i != page){ %>
      <% if(i>page-3&&i<page+3){ %>
      <a href="?page=<%= i %>"><%= i %></a>
      <% } %>
      <% }else{ %>
      <a href=""><%= i %></a>
      <% } %>
      <% } %>
      <% if(page<totalPages-2){ %>
      <a href="?page=<%= page+1 %>">&raquo;</a>
      <% } %>
    </div>
  </div>
</div>